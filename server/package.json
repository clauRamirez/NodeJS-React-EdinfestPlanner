{
    "name": "edinfest-api",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "npx eslint .",
        "dev": "nodemon --exec babel-node src/server.js"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.26.1",
        "cors": "^2.8.5",
        "express": "^4.17.3",
        "hmac_sha1": "^0.1.1",
        "mongodb": "^4.5.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.9",
        "@babel/eslint-parser": "^7.17.0",
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.11",
        "dotenv": "^16.0.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "nodemon": "^2.0.15"
    },
    "optionalDependencies": {
        "fsevents": "^2.3.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-proposal-object-rest-spread"
        ]
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "prettier",
            "plugin:node/recommended"
        ],
        "plugins": [
            "prettier",
            "babel"
        ],
        "parser": "@babel/eslint-parser",
        "rules": {
            "prettier/prettier": "off",
            "spaced-comment": "off",
            "no-console": "warn",
            "consistent-return": "off",
            "func-names": "off",
            "object-shorthand": "off",
            "no-process-exit": "off",
            "no-param-reassign": "off",
            "no-return-await": "off",
            "no-underscore-dangle": "off",
            "class-methods-use-this": "off",
            "no-duplicate-imports": "warn",
            "prefer-destructuring": [
                "error",
                {
                    "object": true,
                    "array": true
                }
            ],
            "no-unused-vars": [
                "warn"
            ]
        },
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "node": true,
            "mongo": true
        }
    },
    "eslintIgnore": [
        "node_modules",
        "build",
        ".env",
        "dist"
    ],
    "prettier": {
        "tabWidth": 4,
        "arrowParens": "always",
        "bracketSameLine": false,
        "semi": true,
        "bracketSpacing": true,
        "singleQuote": false
    }
}
